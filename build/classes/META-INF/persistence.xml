<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="zoologicoDSPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Entities.Itinerario</class>
    <class>Entities.Cuidador</class>
    <class>Entities.Especie</class>
    <class>Entities.Cuidadordominada</class>
    <class>Entities.Guia</class>
    <class>Entities.Relzonaespecie</class>
    <class>Entities.Relitinerariozona</class>
    <class>Entities.Queja</class>
    <class>Entities.Zonaparque</class>
    <class>Entities.Relespeciehabitat</class>
    <class>Entities.Habitat</class>
    <class>Entities.Relhabitatcontinente</class>
    <class>Entities.Cuidadorcargo</class>
    <class>Entities.Continente</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/zoologico?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
    </properties>
  </persistence-unit>
</persistence>
